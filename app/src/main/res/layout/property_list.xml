<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:background="@color/colorLight"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_property_list"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        android:background="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@color/colorLight"
        android:orientation="vertical">

    <TextView
        android:layout_marginBottom="7dp"
        android:textStyle="bold"
        android:id="@+id/text_view_property_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="address: "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_property_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="USA, "/>
        <TextView
            android:id="@+id/text_view_property_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="California "/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_property_price"
        android:layout_width="wrap_content"
        android:textColor="#076811"
        android:layout_marginTop="10dp"
        android:textSize="21sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="price "/>
</LinearLayout>
</LinearLayout>