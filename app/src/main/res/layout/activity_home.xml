<LinearLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorLight">
    <include layout="@layout/app_tool_bar"/>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="15dp">
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_margin="4dp">
<RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent"
    android:layout_margin="0dp">
    <ImageView android:layout_width="70dp"
        android:layout_marginStart="40dp"
        android:id="@+id/alerts"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_baseline_add_alert"/>
    <TextView
        android:id="@+id/text_alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerts"
        android:textSize="20sp"
        android:layout_marginStart="50dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_below="@+id/alerts"
        />
    <ImageView android:layout_width="70dp"
        android:layout_marginStart="50dp"
        android:id="@+id/properties"
       android:layout_toEndOf="@id/alerts"
        android:layout_height="70dp"
        android:background="@drawable/ic_baseline_home"/>
    <TextView
        android:id="@+id/text_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Properties"
        android:textSize="19sp"
        android:layout_marginStart="47dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_below="@id/properties"
        android:layout_toEndOf="@+id/text_alerts"
        />
    <ImageView android:layout_width="70dp"
        android:layout_marginStart="50dp"
        android:id="@+id/tenants"
        android:layout_toRightOf="@id/properties"
        android:layout_height="70dp"
        android:background="@drawable/ic_baseline_person"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tenants"
        android:textSize="20sp"
        android:layout_marginStart="35dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_below="@id/tenants"
        android:layout_toEndOf="@+id/text_properties"
        />
</RelativeLayout>

    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp">
        <ImageView android:layout_width="70dp"
            android:layout_marginStart="30dp"
            android:id="@+id/transactions"
            android:layout_height="70dp"
            android:background="@drawable/ic_baseline_card"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_transactions"
            android:text="Transactions"
            android:textSize="18sp"
            android:layout_marginStart="14dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/transactions"
            />
        <ImageView android:layout_width="70dp"
            android:layout_marginStart="50dp"
            android:id="@+id/collect_rent"
            android:layout_toEndOf="@id/transactions"
            android:layout_height="70dp"
            android:background="@drawable/ic_baseline_money"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_collect_rent"
            android:text="Collect Rent"
            android:textSize="18sp"
            android:layout_marginStart="18dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toEndOf="@id/text_transactions"
            android:layout_below="@id/transactions"
            />
        <ImageView android:layout_width="70dp"
            android:layout_marginStart="50dp"
            android:id="@+id/todo"
            android:layout_toEndOf="@id/collect_rent"
            android:layout_height="70dp"
            android:background="@drawable/ic_baseline_check"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To do List"
            android:textSize="18sp"
            android:layout_marginStart="27dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toEndOf="@id/text_collect_rent"
            android:layout_below="@id/transactions"
            />
    </RelativeLayout>
    <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_marginStart="40dp"
            android:id="@+id/trips"
            android:layout_height="70dp"
            android:background="@drawable/ic_baseline_directions_trips"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_trips"
            android:text="Trips"
            android:textSize="20sp"
            android:layout_marginStart="52dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/trips"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_marginStart="55dp"
            android:id="@+id/documents"
            android:layout_toEndOf="@id/trips"
            android:layout_height="70dp"
            android:background="@drawable/ic_baseline_find_in_page_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_documents"
            android:text="Documents"
            android:textSize="19sp"
            android:layout_marginStart="52dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/documents"
            android:layout_toEndOf="@+id/text_trips"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_marginStart="50dp"
            android:id="@+id/vendors"
            android:layout_toEndOf="@id/documents"
            android:layout_height="70dp"
            android:background="@drawable/ic_baseline_vendors"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_vendors"
            android:text="Vendors"
            android:textSize="20sp"
            android:layout_marginStart="35dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/vendors"
            android:layout_toEndOf="@+id/text_documents"
            />
    </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>